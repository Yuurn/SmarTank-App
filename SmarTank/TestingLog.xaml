<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmarTank.TestingLog"
             Title="Aquarium Chemical Testing Log">
    <VerticalStackLayout Padding="70,0" Spacing="10">
        <Label Text="Select an Option" FontSize="20" HorizontalOptions="Center" />
        <Picker x:Name="myPicker" Title="Choose an option" HorizontalOptions="Center">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Option 1</x:String>
                    <x:String>Option 2</x:String>
                    <x:String>Option 3</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button
            Text="View Saved Option"
            Clicked="OnViewSavedOptionsClicked"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>