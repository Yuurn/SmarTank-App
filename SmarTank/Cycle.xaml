<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmarTank.Cycle"
             Title="Choose Mode">
    <Grid>
        <Image
            Source="cutefish.jpg" 
            Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"/>

        <Button 
            Text="Begin Cycle" 
            Clicked="OnCyclingModeClicked"
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,0,0,50"/>
        
        <Button 
            Text="Maintenance" 
            Clicked="OnMaintenanceModeClicked" 
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,0,0,300"/>

        <Button 
            Text="Continue Cycle" 
            Clicked="OnContinueClicked"
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,200,0,0"/>

        <Button 
            Text="Cycle Tutorial" 
            Clicked="toCycleTutorial"
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,500,0,0"/>

    </Grid>
</ContentPage>