<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmarTank.Cycle"
             Title="Choose Mode">
    <Grid>
        <Image
            Source="cutefish.jpg" 
            Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"/>

        <Button 
            BackgroundColor="CornflowerBlue"
            Text="Begin Cycle" 
            Clicked="OnCyclingModeClicked"
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="0,200,0,0"/>

        <Button 
            BackgroundColor="CornflowerBlue"
            Text="Maintenance" 
            Clicked="OnMaintenanceModeClicked" 
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="0,400,0,0"/>

        <Button 
            BackgroundColor="CornflowerBlue"
            Text="Continue Cycle" 
            Clicked="OnContinueClicked"
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="0,300,0,0"/>

        <Button 
            BackgroundColor="ForestGreen"
            Text="Cycle Tutorial" 
            Clicked="toCycleTutorial"
            FontSize="25"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="0,70,0,0"/>

        <Button
           BackgroundColor= "Coral"
           x:Name="toLog"
           Text="Log Testing"
           FontSize="20"
           Margin="0,0,0,130"
           HorizontalOptions="Center"
           VerticalOptions="End"
           Clicked="ToLog"/>

        <Button
           BackgroundColor= "Coral"
           x:Name="toCamera"
           Text="Camera"
           FontSize="20"
           Margin="0,0,0,40"
           HorizontalOptions="Center"
           VerticalOptions="End"
            Clicked="ToCam"/>


    </Grid>

</ContentPage>